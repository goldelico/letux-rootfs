### echo "USB and Power input"
### echo "==================="

case "$(uname -r)" in

2.6.* )

echo "Main battery"
echo "============"
echo type: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/type)
echo status: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/status)
echo volt: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/voltage_now)mV
echo current: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/current_now)mA
echo online: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/online)
echo temp: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_battery/temp)°C

echo
echo "Backup battery"
echo "=============="
echo type: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_bk_battery/type)
# echo status: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_bk_battery/status)
echo volt: $(cat /sys/bus/platform/devices/twl4030-bci-battery/power_supply/twl4030_bci_bk_battery/voltage_now)mV
;;

3.* )

echo "USB Charger"
echo "============"
echo online: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_usb/online 2>/dev/null)
echo type: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_usb/type)
echo status: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_usb/status 2>/dev/null)
echo volt: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_usb/voltage_now 2>/dev/null)uV
echo current: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_usb/current_now 2>/dev/null)uA

echo
echo "AC Charger"
echo "============"
echo online: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_ac/online 2>/dev/null)
echo type: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_ac/type 2>/dev/null)
echo status: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_ac/status 2>/dev/null)
echo volt: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_ac/voltage_now 2>/dev/null)uV
echo current: $(cat /sys/devices/platform/omap_i2c.1/i2c-1/1-004b/twl4030_bci/power_supply/twl4030_ac/current_now 2>/dev/null)uA

# see http://www.mjmwired.net/kernel/Documentation/hwmon/twl4030-madc-hwmon
echo
echo "Main Battery"
echo "============"
VOLT=$(cat /sys/devices/platform/twl4030_madc_hwmon/in12_input)
echo volt: ${VOLT}mV ca. $(expr \( "$VOLT" - 3200 \) \* 100 / 1050)%
echo current: $(cat /sys/devices/platform/twl4030_madc_hwmon/curr10_input)mA
echo temp: $(cat /sys/devices/platform/twl4030_madc_hwmon/temp1_input)°C
echo type: $(cat /sys/devices/platform/twl4030_madc_hwmon/in0_input)mV
echo ADC7: $(cat /sys/devices/platform/twl4030_madc_hwmon/in7_input)mV	# MICSENSE
echo VBUS: $(cat /sys/devices/platform/twl4030_madc_hwmon/in8_input)mV
echo VCHG: $(cat /sys/devices/platform/twl4030_madc_hwmon/in11_input)mV

echo
echo "Backup battery"
echo "=============="
echo volt: $(cat /sys/devices/platform/twl4030_madc_hwmon/in9_input)mV

echo
echo "BQ27000 (if HDQ works)"
echo "======================"
echo present: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/present 2>/dev/null)
echo type: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/type 2>/dev/null)
echo technology: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/technology 2>/dev/null)
echo capacity: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/capacity 2>/dev/null)%
echo status: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/status 2>/dev/null)
echo level: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/capacity_level 2>/dev/null)
echo volt: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/voltage_now 2>/dev/null)uV
echo current: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/current_now 2>/dev/null)uA
echo temp: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/temp 2>/dev/null)/10°C
echo charge: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/charge_now 2>/dev/null)uAh
echo full: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/charge_full 2>/dev/null)uAh
echo design: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/charge_full_design 2>/dev/null)uAh
echo energy: "$(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/energy 2>/dev/null)J?"
echo power: "$(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/power 2>/dev/null)W?"
echo cycles: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/cycle_count 2>/dev/null)
echo health: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/health 2>/dev/null)
echo discharge: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/time_to_empty_avg 2>/dev/null)s to empty
echo remaining: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/time_to_empty_now 2>/dev/null)s to "?"
echo charging: $(cat /sys/devices/w1_bus_master1/01-000000000000/bq27000-battery/power_supply/bq27000-battery/time_to_full_now 2>/dev/null)s to full
;;

esac