FILE=big_buck_bunny_480p_stereo.ogg

# [ -r $FILE ] || wget "http://mirror.bigbuckbunny.de/peach/bigbuckbunny_movies/big_buck_bunny_480p_stereo.ogg"
[ -r $FILE ] ||  "http://ftp.akl.lt/Video/Big_Buck_Bunny/big_buck_bunny_480p_stereo.ogg"

[ -x /usr/bin/mplayer ] || apt-get install -y mplayer

export DISPLAY=:0.0
mplayer -vo x11 $FILE