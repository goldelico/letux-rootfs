auto lo
iface lo inet loopback

# eth0 is connected through internal USB
# on BeagleBoard XM, BeagleBone, Panda and OMAP5432EVM
auto eth0
iface eth0 inet static
	pre-up depmod
    address 192.168.2.202
    netmask 255.255.255.0
    network 192.168.2.0
    post-up route add default gw 192.168.2.1 metric 0	# higher priority than usb0 - if eth0 is available
    pre-down route del default gw 192.168.2.1
    # set up OpenDNS by default
    up echo nameserver 208.67.222.222 >/etc/resolv.conf

auto usb0
iface usb0 inet static
	pre-up depmod
	pre-up modprobe g_ether
    address 192.168.0.202
    netmask 255.255.255.0
    network 192.168.0.0
    post-up route add default gw 192.168.0.200 metric 1	# lower priority than eth0
    pre-down route del default gw 192.168.0.200
	post-down rmmod g_ether
    # set up OpenDNS by default
    up echo nameserver 208.67.222.222 >/etc/resolv.conf

