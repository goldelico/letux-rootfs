[Unit]
Description=USB memory service
Documentation=
After=systemd-user-sessions.service rc-local.service usb-gadget.service

[Service]
ExecStartPre=/etc/gadget/core/letux-gadget.sh add mass_storage /tmp/disk ro
# ExecStart=/bin/systemctl start serial-getty@%I.service
ExecStopPost=/etc/gadget/core/letux-gadget.sh remove mass_storage
Type=idle
Restart=always
RestartSec=0
UtmpIdentifier=%I
KillMode=process

[Install]
WantedBy=getty.target
DefaultInstance=%I
