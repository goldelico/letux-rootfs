#!/bin/sh
# kFreeBSD do not accept scripts as interpreters, using #!/bin/sh and sourcing.
if [ true != "$INIT_D_SCRIPT_SOURCED" ] ; then
    set "$0" "$@"; INIT_D_SCRIPT_SOURCED=true . /lib/init/init-d-script
fi
### BEGIN INIT INFO
# Provides:          letux-video-gadget
# Required-Start:    letux-gadget
# Required-Stop:
# Default-Start:     
# Default-Stop:      0 1 2 3 4 5 6
# Short-Description: Control /dev/video0
# Description:       This script provides /dev/video0 to configfs
#                    
### END INIT INFO

# Author: H. Nikolaus Schaller <hns@goldelico.com>

UVC_GADGET=$(which uvc-gadget)
[ -x "$UVC_GADGET" ] || UVC_GADGET=/usr/bin/*/uvc-gadget
SERVICE=letux-video-gadget
DEVICE=uvc0
CAPTURE_DEVICE=video1

do_status () {
	if [ -e /dev/$DEVICE ] ; then
		echo "$SERVICE is running."
		return 0
	else
                return 4
        fi
}

case "$1" in
  start)
        log_daemon_msg "Starting $SERVICE"
	/etc/gadget/core/letux-gadget.sh add uvc
# manuell: uvc-gadget -u /dev/video2 -f 0 -i 0 -v /dev/video0 - video0 wäre die Kamera, video2 das Gadget
# oder angeblich uvc-gadget -u /dev/video2 -v /path/to/test_pattern.mjpeg
# FIXME: wie herausfinden oder steuern was wo läuft? Eigentlich sollte die Kamera den daemon starten...
#	daemon -r --name=$SERVICE -- $UVC_GADGET -u /dev/$DEVICE -f 1 -i 0 -v /dev/$CAPTURE_DEVICE
	udevadm settle
# echo UVC_GADGET: $UVC_GADGET
# ls -l /dev/$DEVICE
	daemon -r --name=$SERVICE -- $UVC_GADGET -u /dev/$DEVICE -d	# some test image...
        exit 0
        ;;
  restart|reload|force-reload)
        echo "Error: argument '$1' not supported" >&2
        exit 3
        ;;
  stop)
        log_daemon_msg "Stopping $SERVICE"
	daemon --name=$SERVICE --stop 2>/dev/null
	/etc/gadget/core/letux-gadget.sh remove uvc
        log_progress_msg "disabled."
        log_end_msg 0
        exit 0
        ;;
  status)
	do_status
	exit $?
	;;
  *)
        echo "Usage: $0 start|stop|status" >&2
        exit 3
        ;;
esac

:
